<!-- app/views/to_do_lists/edit.html.erb -->

<div class="flex flex-col items-center mx-auto mt-16">
  
    <h1 class="text-2xl font-semibold mb-8">Edit List</h1>

    <%= form_with(model: @to_do_list, url: to_do_list_path(@to_do_list), method: :patch, class: "my-5") do |form| %>
      <div class="flex items-center mb-4">
        <%= form.label :name, class: "mr-4" %>
        <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 w-2/4" %>
        <%= form.submit class: "ml-4 rounded-lg py-3 px-5 bg-yellow-500 text-white font-medium cursor-pointer" %>
      </div>
    <% end %>

</div>
